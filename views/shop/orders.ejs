<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (orders.length > 0) { %>
                    <% for (order of orders) { %>
                        <% total = 0 %>
                        <div>
                            <h2 style="margin: 5px 0px">Order #<%= order._id %></h2>
                            <span style="display:inline-flex;">
                                <% for (product of order.products) { %>
                                    <div style="margin-right: 90px;">
                                        <img src="<%= product.imageUrl%>" 
                                            onerror="this.onerror=null; this.src='/images/image.png'" 
                                            alt="Product has been deleted" 
                                            height="150px">
                                        <p style="margin: 0px 0px;"><%= product.title %> x <%= product.quantity %></p>
                                        <p style="margin: 0px 0px;">$<%= product.price * product.quantity %></p>
                                    </div>
                                    <% total+= product.price * product.quantity %>
                                <% } %>
                            </span>
                            <h3>Total: $<%= total%> -  
                                <a href="orders/<%= order._id %>" target=”_blank”>Invoice</a>
                            </h3>
                            <hr style="margin: 20px 0px;">
                        </div>
                    <% } %>
                <% } else { %>
                    <h1>No Orders Found!</h1>
                <% } %>
            </main>
            <%- include('../includes/end.ejs') %>