<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/message.ejs') %>

        <form class="product-form" action="/admin/<%= edit ? 'edit' : 'add' %>-product" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' : '' %>"
                    type="text" 
                    name="title" 
                    id="title" 
                    value="<%= edit||error ? product.title : '' %>">
            </div>
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file" name="image" id="image">
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'imageUrl') ? 'invalid' : '' %>"
                    type="text" 
                    name="imageUrl" 
                    id="imageUrl" 
                    value="<%= edit||error ? product.imageUrl : ''%>">
            </div> -->
            <div class="form-control">
                <label for="price">Price</label>
                <input
                    class="<%= validationErrors.find(e => e.path === 'price') ? 'invalid' : '' %>" 
                    type="number" 
                    name="price" 
                    id="price" 
                    step="0.01" 
                    value="<%= edit||error ? product.price : '' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                    class="<%= validationErrors.find(e => e.path === 'description') ? 'invalid' : '' %>"
                    name="description" 
                    id="description" 
                    rows="5"><%= edit||error ? product.description : '' %></textarea>
            </div>
            
            <input type="hidden" value="<%= edit ? product._id : '' %>" name="id">
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <button class="btn" type="submit"><%= edit ? 'Edit ': 'Add ' %>Product</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>